<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtSupplier"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SUPPLIER" />

    <TextView
        android:id="@+id/lblExpiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/txtSupplier"
        app:layout_constraintTop_toBottomOf="@+id/txtSupplier"
        android:text="@string/expiration" />

    <TextView
        android:id="@+id/txtExpirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/default_date"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/lblExpiration"
        app:layout_constraintTop_toBottomOf="@+id/txtSupplier" />


</android.support.constraint.ConstraintLayout>